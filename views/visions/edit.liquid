{% layout "layout.liquid" %}
{% block content %}

<div class="form">

 <form action="/visions/{{ visions._id }}?_method=PUT" method="post">
  <fieldset>
    <legend>Edit {{ visions.title }}</legend>
<div class="form-group">
        <label class="form-label">
            Title: <input type="text" class="form-control" name="title" placeholder="enter title here" value="{{visions.title}}"/>
        </label>
        </div>
<div class="form-group">
        <label class="form-label">
            Image: <input type="text" class="form-control" name="image" placeholder="enter new image URL here" value="{{visions.image}}"/>
        </label>
</div>
<div class="form-group">
        <label class="form-label">
            Description:<input type="textarea" class="form-control" name="description" placeholder="description goes here" value="{{visions.description}}"> 
        </label>
</div>
<div class="form-group">
        <label class="form-label">
            Complete: <input type="checkbox" name="complete"
            {% if visions.complete == true %}
            checked
            {% endif %}
            >
        </label>
</div>
    </fieldset>
    <input type="submit" class="btn btn-outline-secondary text-center" value="update {{visions.title}}"/>
 </form>

</div>


{% endblock %}